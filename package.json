  "main": "dist/index.js",
  "scripts": {
    "clean:dist": "rm -rf dist && mkdir dist/server -p && mkdir dist/client -p",
    "copy:assets": "./bin/copy-assets",
    "build:server": "babel --ignore '*.spec.js' --ignore 'src/client' -d dist src",
    "build:client": "NODE_ENV=production webpack --progress --hide-modules",
    "build:all": "NODE_ENV=production npm run clean:dist && npm run build:server && npm run build:client && npm run copy:assets",
    "watch:client": "webpack-dev-server --inline --hot",
    "prepublish": "npm run clean:dist && npm run build:all",
    "lint": "eslint src",
    "test": "jest --coverage"
  },
